{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true
        }
      }
    ],
    "assets": [
      {
        "include": "./modules/mail/templates/**/*",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ]
  }
}
